<% if user.wearable_hats.any? || user.is_moderator? %>
  <div class="boxline">
    <% if user.wearable_hats.any? %>
      <%= form.label :hat_id, "Put on hat:" %>
      <%= form.select :hat_id, options_for_select( [["",""]] +
        user.hats.map do |h|
          [h.hat, { "data-modnote" => h.modlog_use }, h.id]
        end
      ) %>
    <% end %>

    <% if user.is_moderator? %>
      <%= form.check_box :mod_note, {class: :normal}, "1", false %>
      <%= form.label :mod_note, "ModNote", class: :normal %>
    <% end %>
  </div>
<% end %>
